@model IEnumerable<WanderlustRealms.Models.Rooms.RoomKingdom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomKingdomID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomKingdomID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomKingdomID">Delete</a> |
                <a asp-action="Index" asp-route-RoomKingdomID="@item.RoomKingdomID" asp-controller="RoomAreas">Rooms</a>
            </td>
        </tr>
}
    </tbody>
</table>
