@model WanderlustRealms.Models.ViewModel.ArmorLimb

@{
    ViewData["Title"] = "AddArmorLimbs";
}

<h1>Add Armor Limbs</h1>

<div class="row">
    <div class="col-12">
        <form asp-action="AddArmorLimbs">
            <div class="form-group">
                <label asp-for="LimbID" class="control-label"></label>
                <select asp-for="LimbID" class="form-control" asp-items="@ViewBag.LimbList"></select>
                <span asp-validation-for="LimbID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ItemID" value="@ViewBag.ItemID" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


