@model IEnumerable<WanderlustRealms.Models.Rooms.RoomExit>

@{
    ViewData["Title"] = "Index";
}

<h1>Room Exits</h1>

<p>
    <a asp-action="Create" asp-route-RoomID="@ViewBag.RoomID">Create New</a>
</p>

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Rooms" asp-route-RoomAreaID="@ViewBag.RoomAreaID">Back</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExitDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHidden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentRoomID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetRoomID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExitDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHidden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentRoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetRoomID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomExitID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomExitID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomExitID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
