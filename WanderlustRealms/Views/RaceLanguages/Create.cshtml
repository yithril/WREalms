@model WanderlustRealms.Models.Living.RaceLanguage

@{
    ViewData["Title"] = "Create";
}

<h1>Languages for @ViewBag.Name</h1>

<h4>Race Language</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RaceID" class="control-label"></label>
                <input type="hidden" asp-for="RaceID" />
                <input type="text" readonly value="@Model.Race.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LanguageID" class="control-label"></label>
                <select asp-for="LanguageID" class="form-control" asp-items="ViewBag.LanguageID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartingLevel" class="control-label"></label>
                <input type="text" class="form-control" asp-for="StartingLevel" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMain" /> @Html.DisplayNameFor(model => model.IsMain)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


