@model IEnumerable<WanderlustRealms.Models.Living.Language>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adjective)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adjective2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageModifier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adjective)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adjective2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageModifier)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LanguageID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LanguageID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LanguageID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
