@model WanderlustRealms.Models.Rooms.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRessurectionPoint" /> @Html.DisplayNameFor(model => model.IsRessurectionPoint)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TerrainType" class="control-label"></label>
                <select asp-for="TerrainType" class="form-control" asp-items="Html.GetEnumSelectList<WanderlustRealms.Models.Enum.TerrainTypes>()"></select>
                <span asp-validation-for="TerrainType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightLevel" class="control-label"></label>
                <input asp-for="LightLevel" class="form-control" />
                <span asp-validation-for="LightLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NPCIDList" class="form-control" />
            </div>
            <input type="hidden" asp-for="RoomAreaID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

